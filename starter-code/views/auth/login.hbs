<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Inicia tu sesión</h1>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="usuario">Usuario</label>
                <input name="user" type="text" class="form-control" id="usuario">
            </div>
            <div class="form-group">
                <label for="contraseña">Contraseña</label>
                <input name="password" type="password" class="form-control" id="contraseña">
            </div>
            <button type="submit" class="btn btn-dark btn-block btn-lg">Inicia sesión</button>
            <div id="errorMsg">{{{errorMessage}}}</div>
        </form>
        <p><a href="/signup">Crea un nuevo usuario</a></p>
    </div>
</div>